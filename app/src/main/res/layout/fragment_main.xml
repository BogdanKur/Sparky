<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".screens.MainFragment"
    tools:ignore="MissingConstraints"
    android:paddingHorizontal="@dimen/_20dp">

    <TextView
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="@dimen/_15dp"
        android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semi_bold"
        android:text="@string/logo"
        android:textColor="@color/white"
        android:textSize="@dimen/_21sp"
        app:layout_constraintStart_toEndOf="@id/ivMenu"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vibe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/ivMenu"
        app:layout_constraintBottom_toBottomOf="@id/ivMenu"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/icon_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLogo"
        android:layout_marginTop="@dimen/_22dp"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36dp"
        android:progressDrawable="@drawable/custom_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="50" />
    <TextView
        android:fontFamily="@font/bold"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 010 RUB (20%)"/>
    <TextView
        android:fontFamily="@font/semi_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintTop_toBottomOf="@id/progressBar"/>
    <TextView
        android:fontFamily="@font/semi_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:text="10 000"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        app:layout_constraintTop_toBottomOf="@id/progressBar"/>

    <com.example.sparky.utils.CustomCircleView
        android:layout_marginBottom="@dimen/_150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ivExmCircular"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_200dp"/>

    <com.example.sparky.utils.CustomCircleView
        android:layout_marginBottom="@dimen/_150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ivExmCircularSmall"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"/>

    <com.example.sparky.utils.CustomCircleView
        android:layout_marginBottom="@dimen/_220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ivExmCircularMedium"
        android:layout_width="@dimen/_120dp"
        android:layout_height="@dimen/_120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4dp"
        android:fontFamily="@font/bold"
        android:text="@string/chat_live_stream"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sp"
        app:layout_constraintBottom_toBottomOf="@id/ivDonate"
        app:layout_constraintEnd_toStartOf="@+id/ivDonate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivDonate" />
    <ImageView
        android:id="@+id/ivDonate"
        android:background="@drawable/button_green_background"
        app:layout_constraintBottom_toBottomOf="@id/ivSettings"
        app:layout_constraintTop_toTopOf="@id/ivSettings"
        app:layout_constraintEnd_toStartOf="@id/ivSettings"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_width="@dimen/_125dp"
        android:layout_height="@dimen/_35dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/ivDonate"
        app:layout_constraintBottom_toBottomOf="@id/ivDonate"
        app:layout_constraintStart_toStartOf="@id/ivDonate"
        app:layout_constraintEnd_toEndOf="@id/ivDonate"
        android:textColor="@color/white"
        android:text="@string/make_donate"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:padding="@dimen/_5dp"
        android:background="@drawable/background_settings"
        android:id="@+id/ivSettings"
        android:layout_marginBottom="@dimen/_60dp"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_settings"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>