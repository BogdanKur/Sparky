<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#279A29"/>
            <corners android:radius="10000dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="105dp"
                android:startColor="#0D279A29"
                android:centerColor="#33279A29"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#05df05"
                android:useLevel="false">
                <item android:color="#0D279A29" android:offset="0.0" />
                <item android:color="#33279A29" android:offset="0.25" />
                <item android:color="#84279A29" android:offset="0.8" />
                <item android:color="#279A29" android:offset="1.0" />
                </gradient>
        </shape>
    </item>
</selector>
